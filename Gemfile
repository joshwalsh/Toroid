source 'https://rubygems.org'

gem 'rails', '3.2.1'
gem 'sqlite3'

# Gems used only for assets and not required
# in production environments by default.
group :assets do
  gem 'less-rails-bootstrap'

  gem 'uglifier', '>= 1.0.3'
end

gem 'jquery-rails'

group :test, :development do
  gem "factory_girl_rails"
  gem "rspec-rails"
  gem "guard-rspec"
  gem "growl"
  gem "jasmine"
end

group :test do
  gem "turnip"
  gem "capybara"
end